# ===========================================
# BOXING APP ENVIRONMENT CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development
APP_ENV=dev

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=boxing_app

# Payment Service Database
PAYMENT_DB_NAME=payment_service

# ===========================================
# SERVICE PORTS
# ===========================================
FRONTEND_PORT=3001
BACKEND_PORT=3002
PAYMENT_SERVICE_PORT=3000

# ===========================================
# SERVICE URLS (Internal Docker Network)
# ===========================================
FRONTEND_URL=http://frontend:3001
BACKEND_URL=http://backend:3002
PAYMENT_SERVICE_URL=http://payment-service:3000

# ===========================================
# EXTERNAL URLS (For Frontend)
# ===========================================
NEXT_PUBLIC_BACKEND_URL=http://localhost:3002
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:3000

# ===========================================
# OMISE PAYMENT CONFIGURATION
# ===========================================
OMISE_PUBLIC_KEY=pkey_test_xxxxxxxxxxxxxxxxxxxxx
OMISE_SECRET_KEY=skey_test_xxxxxxxxxxxxxxxxxxxxx
OMISE_WEBHOOK_SECRET=whsec_test_xxxxxxxxxxxxxxxxxxxxx

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=/app/uploads

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# ===========================================
# NGINX CONFIGURATION
# ===========================================
NGINX_PORT=80
NGINX_SSL_PORT=443
